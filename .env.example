# Hyperliquid Configuration
SYMBOL=xyz:NVDA
USE_TESTNET=false

# Perp DEXs to use (comma-separated list)
# xyz = TradeXYZ (stocks and equities)
PERP_DEXS=xyz

# Interactive Brokers Configuration
STOCK_SYMBOL=NVDA
IBKR_HOST=127.0.0.1

# Port: 7497 (TWS Paper), 7496 (TWS Live), 4002 (Gateway Paper), 4001 (Gateway Live)
IBKR_PORT=7497

# Account ID (optional for data fetching, required for trading)
# Format: DU1234567 (Paper Trading) or U1234567 (Live Trading)
# Leave empty to use the first available account
IBKR_ACCOUNT_ID=

# Client ID for API connection (use different IDs if running multiple instances)
IBKR_CLIENT_ID=1

# Set to true to disable IBKR data fetching (Hyperliquid only)
DISABLE_IBKR=false

# Set to true to only fetch IBKR data during regular market hours (9:30 AM - 4:00 PM ET)
# During pre-market, after-hours, and closed hours, only Hyperliquid data will be fetched
# Automatically handles daylight saving time (DST) and standard time
IBKR_REGULAR_HOURS_ONLY=false

# Prometheus Push Gateway Configuration
# Example: localhost:9091 or pushgateway.example.com:9091
PUSH_GATEWAY_URL=localhost:9091

# Job name for Prometheus metrics
JOB_NAME=hyperliquid_nvda

# Data collection interval in seconds (supports decimals like 0.1, 0.5, 1.0)
# Controls how often to:
#   - Read latest data from real-time streams (data is always fresh)
#   - Push metrics to Prometheus
# Streaming mode allows very short intervals for high-frequency arbitrage monitoring
# Recommended: 60 for monitoring, 5-10 for active trading, 0.5-1 for high-frequency arbitrage, 0.1 for ultra-low-latency
FETCH_INTERVAL=60

